<div class="col-lg-8 col-centered">

  <div class="panel panel-default">
    <div class="panel-heading">
        <h3>
          附近的活动
          <div class="pull-right">
            <%= link_to("发起活动", new_job_path, :class => "btn btn-default" ) %>
          </div>
          <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            筛选
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("进阶程度", jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
                  <%= link_to("跑步里程", jobs_path(:order => "by_upper_bound")) %>

              </li>
              <li>
                <%= link_to("最近活动日期", jobs_path ) %>
          </h3>
              </li>
          </ul>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <div class="thumbnail">
              <a href="header1.jpg" target="_blank">
                <img src="https://ooo.0o0.ooo/2017/04/28/59029511d03d4.jpg" alt="Lights" style="width:90%">
                <div class="caption">
                  <h3 class="text-center">Perfect Weekend Morning</h2>
                  <p class="text-center">Weekend 2 miles easy and fun running + brunch</p>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="thumbnail">
              <a href="/w3images/nature.jpg" target="_blank">
                <img src="https://static.pexels.com/photos/5317/food-salad-restaurant-person.jpg" alt="Nature" style="width:90%">
                <div class="caption">
                  <h3 class="text-center">Girl Networking</h2>
                  <p class="text-center">Brunch and networking session with inspiring and women leaders across industries </p>
                 </div>
              </a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="thumbnail">
              <a href="/w3images/fjords.jpg" target="_blank">
                <img src="https://static.pexels.com/photos/5317/food-salad-restaurant-person.jpg" alt="Fjords" style="width:90%">
                <div class="caption">
                  <h3 class="text-center">Professional Coach</h2>
                  <p class="text-center">Special outdoor training session with professional fitness coach </p>
                </div>
              </a>
            </div>
          </div>
        </div>
        </div>


        <table class="table table-boldered">
            <thead>
                <tr>
                    <td>活动名称</td>
                    <td>进阶程度</td>
                    <td>跑步里程（公里）</td>
                    <td>活动日期</td>
                </tr>
            </thead>
            <tbody>
                <% @jobs.each do |job| %>
                <tr>
                    <td>
                        <%= link_to(job.title, job_path(job)) %>
                    </td>
                    <td>
                        <%= job.wage_lower_bound %>
                    </td>
                    <td>
                        <%= job.wage_upper_bound %>
                    </td>
                    <td>
                        <%= job.created_at %>
                    </td>
                </tr>
                <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
